---
import { Icon } from "astro-icon/components";
import { getLangFromUrl, useTranslations, useTranslatedPath } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="bg-gradient-to-b from-neutral-800 to-neutral-900 px-4 py-16 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-5xl text-center">
    <div class="mb-10 overflow-hidden">
      <img src="/Limo Fiyat Listesi 2026.png" alt="Limo Fiyat Listesi 2026" class="h-auto w-full" />
    </div>

    <a href="/Limo Fiyat Listesi 2026.pdf" download class="inline-flex items-center gap-2 rounded-full bg-green-400 px-8 py-4 text-lg font-bold text-neutral-900 transition-colors hover:bg-green-500">
      <Icon name="solar:download-minimalistic-bold" class="h-7 w-7" />
      {t("pricing.download_price_list")}
    </a>
  </div>
</section>
