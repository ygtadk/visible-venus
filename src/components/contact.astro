---
import { getLangFromUrl, useTranslations, useTranslatedPath } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<!-- Contact Component -->
<div id="contact" class="bg-neutral-900">
  <div class="mx-auto max-w-7xl px-4 py-10 lg:py-20 xl:px-0">
    <!-- Title -->
    <div class="mb-10 max-w-3xl lg:mb-14">
      <h2 class="text-2xl font-semibold text-white md:text-4xl md:leading-tight">Contact us</h2>
      <p class="mt-1 text-neutral-400">Whatever your goal - we will get you there.</p>
    </div>
    <!-- End Title -->

    <!-- Grid -->
    <div class="grid grid-cols-1 gap-x-10 md:grid-cols-2 lg:gap-x-16">
      <div class="mb-10 border-b border-neutral-800 pb-10 md:order-2 md:mb-0 md:border-b-0 md:pb-0">
        <form>
            <div class="grid gap-4 lg:gap-6">
              <!-- Grid -->
              <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:gap-6">
                <div>
                  <label for="hs-firstname-contacts-1" class="mb-2 block text-sm font-medium text-white">First Name</label>
                  <input type="text" name="hs-firstname-contacts-1" id="hs-firstname-contacts-1" class="block w-full rounded-lg px-4 py-2.5 focus:border-green-400 disabled:pointer-events-none disabled:opacity-50 sm:py-3 sm:text-sm border-neutral-700 bg-neutral-900 text-neutral-400 placeholder-neutral-500 focus:ring-neutral-600" />
                </div>

                <div>
                  <label for="hs-lastname-contacts-1" class="mb-2 block text-sm font-medium text-white">Last Name</label>
                  <input type="text" name="hs-lastname-contacts-1" id="hs-lastname-contacts-1" class="block w-full rounded-lg px-4 py-2.5 focus:border-green-400 disabled:pointer-events-none disabled:opacity-50 sm:py-3 sm:text-sm border-neutral-700 bg-neutral-900 text-neutral-400 placeholder-neutral-500 focus:ring-neutral-600" />
                </div>
              </div>
              <!-- End Grid -->

              <!-- Grid -->
              <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:gap-6">
                <div>
                  <label for="hs-email-contacts-1" class="mb-2 block text-sm font-medium text-white">Email</label>
                  <input type="email" name="hs-email-contacts-1" id="hs-email-contacts-1" autocomplete="email" class="block w-full rounded-lg px-4 py-2.5 focus:border-green-400 disabled:pointer-events-none disabled:opacity-50 sm:py-3 sm:text-sm border-neutral-700 bg-neutral-900 text-neutral-400 placeholder-neutral-500 focus:ring-neutral-600" />
                </div>

                <div>
                  <label for="hs-phone-number-1" class="mb-2 block text-sm font-medium text-white">Phone Number</label>
                  <input type="text" name="hs-phone-number-1" id="hs-phone-number-1" class="block w-full rounded-lg border-neutral-700 px-4 py-2.5 focus:border-green-400 disabled:pointer-events-none disabled:opacity-50 sm:py-3 sm:text-sm bg-neutral-900 text-neutral-400 placeholder-neutral-500 focus:ring-neutral-600" />
                </div>
              </div>
              <!-- End Grid -->

              <div>
                <label for="hs-about-contacts-1" class="mb-2 block text-sm font-medium text-white">Details</label>
                <textarea id="hs-about-contacts-1" name="hs-about-contacts-1" rows="4" class="block w-full rounded-lg px-4 py-2.5 focus:border-green-400 disabled:pointer-events-none disabled:opacity-50 sm:py-3 sm:text-sm border-neutral-700 bg-neutral-900 text-neutral-400 placeholder-neutral-500 focus:ring-neutral-600"></textarea>
              </div>
            </div>
            <!-- End Grid -->

            <div class="mt-6 grid">
              <button type="submit" class="inline-flex w-full items-center justify-center gap-x-2 rounded-lg border border-transparent bg-green-400 px-4 py-3 text-sm font-medium text-black hover:bg-green-600 focus:bg-green-600 focus:outline-hidden disabled:pointer-events-none disabled:opacity-50">Send inquiry</button>
            </div>

            <div class="mt-3 text-center">
              <p class="text-sm text-neutral-500">We'll get back to you in 1-2 business days.</p>
            </div>
          </form> 
      </div>
      <!-- End Col -->

      <div class="space-y-14">
        <!-- Item -->
        <div class="flex gap-x-5">
          <svg class="size-6 shrink-0 text-neutral-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          <div class="grow">
            <h4 class="font-semibold text-white">Our address:</h4>

            <address class="mt-1 text-sm text-neutral-400 not-italic">
              300 Bath Street, Tay House<br />
              Glasgow G2 4JR, United Kingdom
            </address>
          </div>
        </div>
        <!-- End Item -->

        <!-- Item -->
        <div class="flex gap-x-5">
          <svg class="size-6 shrink-0 text-neutral-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"></path>
            <path d="m22 10-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 10"></path>
          </svg>
          <div class="grow">
            <h4 class="font-semibold text-white">Email us:</h4>

            <a class="mt-1 text-sm text-neutral-400 hover:text-neutral-200 focus:text-neutral-200 focus:outline-hidden" href="#mailto:example@site.co" target="_blank">hello@example.so</a>
          </div>
        </div>
        <!-- End Item -->

        <!-- Item -->
        <div class="flex gap-x-5">
          <svg class="size-6 shrink-0 text-neutral-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="m3 11 18-5v12L3 14v-3z"></path>
            <path d="M11.6 16.8a3 3 0 1 1-5.8-1.6"></path>
          </svg>
          <div class="grow">
            <h4 class="font-semibold text-white">We're hiring</h4>
            <p class="mt-1 text-neutral-400">We're thrilled to announce that we're expanding our team and looking for talented individuals like you to join us.</p>
            <p class="mt-2">
              <a class="group inline-flex items-center gap-x-2 text-sm font-medium text-green-400 decoration-2 hover:underline focus:underline focus:outline-hidden" href="#">
                Job openings
                <svg class="size-4 shrink-0 transition group-hover:translate-x-0.5 group-focus:translate-x-0.5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M5 12h14"></path>
                  <path d="m12 5 7 7-7 7"></path>
                </svg>
              </a>
            </p>
          </div>
        </div>
        <!-- End Item -->
      </div>
      <!-- End Col -->
    </div>
    <!-- End Grid -->
  </div>
</div>
<!-- End Contact Component -->
