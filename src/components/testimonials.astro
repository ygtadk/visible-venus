---
import { getLangFromUrl, useTranslations, useTranslatedPath } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const testimonials = [
  {
    quote: "Çok hızlı ve güvenilir bir hizmet sundular. Projemiz zamanında ve bütçe dahilinde tamamlandı.",
    name: "Nate Higgerson",
    position: "CTO",
    company: "Higger Networks",
    image: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQWw1W8Eb_wk_jz4kS2nerMPf59tqcKRJpEK1RVRIkYBiBew0M63lFJDx3sJJc3AzhgcZc&usqp=CAU",
  },
  {
    quote: "Mükemmel müşteri hizmetleri ve kaliteli ürünler. İşimizi büyütmemize büyük katkı sağladılar.",
    name: "Sarah Johnson",
    position: "CEO",
    company: "Bright Solutions",
    image: "https://images.pexels.com/photos/3760373/pexels-photo-3760373.jpeg",
  },
  {
    quote: "Profesyonel ve deneyimli bir ekip. Tüm ihtiyaçlarımızı anladılar ve harika çözümler sundular.",
    name: "Michael Lee",
    position: "Product Manager",
    company: "Tech Innovators",
    image: "https://images.pexels.com/photos/220453/pexels-photo-220453.jpeg",
  },
  {
    quote: "Yaratıcı ve etkili çözümlerle iş süreçlerimizi optimize ettiler. Kesinlikle tavsiye ederim.",
    name: "Emily Davis",
    position: "Marketing Director",
    company: "Creative Minds",
    image: "https://images.pexels.com/photos/415829/pexels-photo-415829.jpeg",
  },
];
---

<!-- Testimonials Component -->
<div class="w-full bg-gradient-to-b from-neutral-900 from-0% via-neutral-800 via-50% to-neutral-900 to-100%">
  <div class="mx-auto max-w-7xl py-10 lg:py-20 xl:px-0">
    <!-- Title -->
    <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
      <h2 class="text-2xl font-bold text-gray-800 md:text-4xl md:leading-tight dark:text-white">
        {t("testimonials.title")}
      </h2>
      <p class="mt-1 text-gray-600 dark:text-neutral-400">
        {t("testimonials.subtitle")}
      </p>
    </div>
    <!-- End Title -->
    <!-- Grid -->
    <div class="grid gap-6 sm:grid-cols-2 lg:gap-8">
      {
        testimonials.map((testimonial) => (
          <div class="flex flex-col rounded-xl border border-neutral-700 bg-neutral-900 p-6 shadow-xs transition hover:shadow-md focus:shadow-md focus:outline-hidden">
            <blockquote class="grow">
              <p class="text-lg text-neutral-200 italic">"{testimonial.quote}"</p>
            </blockquote>
            <div class="mt-6 flex items-center space-x-4">
              <img class="size-16 rounded-full object-cover md:size-20" src={testimonial.image} alt={testimonial.name} />
              <div>
                <p class="font-semibold text-green-400">{testimonial.name}</p>
                <p class="text-sm text-neutral-400">
                  {testimonial.position} - {testimonial.company}
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

<!-- End Testimonials Component -->
