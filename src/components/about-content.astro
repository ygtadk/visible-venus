---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const values = [
  {
    title: t("about.values.innovation"),
    icon: `<svg class="size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" /></svg>`,
  },
  {
    title: t("about.values.customer_focus"),
    icon: `<svg class="size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" /></svg>`,
  },
  {
    title: t("about.values.quality"),
    icon: `<svg class="size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z" /></svg>`,
  },
  {
    title: t("about.values.integrity"),
    icon: `<svg class="size-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" /></svg>`,
  },
];
---

<section class="bg-gradient-to-b from-neutral-800 from-0% via-neutral-800from-neutral-800 via-75% to-neutral-900 to-100% py-24">
  <div class="mx-auto max-w-7xl px-4 xl:px-0">
    <!-- Header -->
    <div class="mb-16 max-w-3xl lg:mb-24">
      <h1 class="mb-6 text-4xl font-bold text-white md:text-5xl">
        {t("about.title")}
      </h1>
      <p class="text-xl text-neutral-400">
        {t("about.subtitle")}
      </p>
    </div>

    <!-- Mission & Vision -->
    <div class="mb-24 grid grid-cols-1 gap-12 lg:grid-cols-2 lg:gap-24">
      <div class="rounded-2xl border border-neutral-700/50 bg-neutral-800/50 p-8">
        <h2 class="mb-4 text-2xl font-bold text-green-400">{t("about.mission.title")}</h2>
        <p class="text-lg leading-relaxed text-neutral-300">
          {t("about.mission.text")}
        </p>
      </div>
      <div class="rounded-2xl border border-neutral-700/50 bg-neutral-800/50 p-8">
        <h2 class="mb-4 text-2xl font-bold text-green-400">{t("about.vision.title")}</h2>
        <p class="text-lg leading-relaxed text-neutral-300">
          {t("about.vision.text")}
        </p>
      </div>
    </div>

    <!-- Values -->
    <div>
      <h2 class="mb-12 text-center text-3xl font-bold text-white">{t("about.values.title")}</h2>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
        {
          values.map((value) => (
            <div class="group flex flex-col items-center rounded-xl border border-neutral-700/30 bg-neutral-800/30 p-6 text-center transition-colors duration-300 hover:border-green-400/50">
              <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-neutral-700 text-green-400 transition-colors duration-300 group-hover:bg-green-400 group-hover:text-neutral-900" set:html={value.icon} />
              <h3 class="text-lg font-semibold text-white">{value.title}</h3>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
